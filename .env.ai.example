# AI Trading Agent - Environment Configuration Example
# Copy this file to .env.ai and fill in your actual API keys

# Alpaca API Configuration
# Get your API keys from: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Paper Trading Mode (true for paper trading, false for live trading)
PAPER_TRADING=true

# News API Configuration
# Get your API key from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Settings
LOG_LEVEL=INFO
CACHE_TTL_SECONDS=300

# Risk Management Defaults
MAX_POSITION_SIZE=0.1
MAX_PORTFOLIO_RISK=0.02
DAILY_LOSS_LIMIT=1000
STOP_LOSS_PCT=0.05
TAKE_PROFIT_PCT=0.10
MAX_OPEN_POSITIONS=10

# Model Configuration
MODEL_DIR=data/models
CACHE_DIR=data/cache
DATABASE_PATH=data/database/trading.db

# Feature Flags
ENABLE_AUTOMATED_TRADING=false
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_PAPER_TRADING=true
